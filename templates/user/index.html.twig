			<th>Profil</th>
			<th>Voir</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
		{% for user in users %}
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.firstname }}</td>
				<td>{{ user.lastname }}</td>
				<td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				<td><a href="">Voir</a></td>
				<td><a href="">Modifier</a></td>
				<td><a href="">Supprimer</a></td>
			</tr>
		{% endfor %}
	</table>
	
</div>
{% endblock %}
