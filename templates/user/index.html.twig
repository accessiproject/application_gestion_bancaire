{% extends 'base.html.twig' %}

{% block title %}Gestion des comptes utilisateurs{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Gestion des comptes utilisateurs</h1>
	<table>
		<tr>
			<th>identifiant</th>
			<th>Pr√©nom</th>
			<th>Nom</th>
