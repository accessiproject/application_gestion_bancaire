{% extends 'base.html.twig' %}

{% block title %}Client n°{{ user.id }} : {{ user.gender ? "M." : "Mme" }} {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
    <h1>Client n°{{ user.id }} : {{ user.gender ? "M." : "Mme" }} {{ user.firstname }} {{ user.lastname }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N° client</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Naissance</th>
                <td>{{ user.birthat|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Adresse email</th>
                <td>
                    <a href="mailto:{{ user.email }}">{{ user.email }}</a></a>
                </td>
            </tr>
            <tr>
                <th>N° téléphone</th>
                <td>
                    <a href="tel:{{ user.phone }}">{{ user.phone }}</a>
                </td>

            </tr>
            <tr>
                <th>Créé</th>
                <td>{{ user.createdat|date('d/m/Y H:i') }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ user.updatedat|date('d/m/Y H:i') }}</td>
            </tr>
        </tbody>
    </table>
    <p><a href="{{ path('user_customer_edit', {'id': user.id}) }}">Modifier les informations</a></p>
    <p><a href="{{ path('account_list', {'id': user.id}) }}">Accéder au(x) compte(s) bancaire(s) du client</a></p>
	<p><a href="{{ path('user_customer_list') }}">Retour</a></p>
{% endblock %}
